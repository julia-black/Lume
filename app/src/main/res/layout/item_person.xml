<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_small">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image"
        android:layout_width="@dimen/size_image_person"
        android:layout_height="@dimen/size_image_person"
        android:layout_marginStart="@dimen/margin_medium"
        app:cardCornerRadius="36dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_person"
            android:layout_width="@dimen/size_image_person"
            android:layout_height="@dimen/size_image_person"
            android:src="@drawable/ic_profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="@id/card_image"
        app:layout_constraintStart_toEndOf="@id/card_image"
        app:layout_constraintTop_toTopOf="@id/card_image"
        tools:text="Иван Иванов" />

    <ImageView
        android:id="@+id/button_add_to_friends"
        android:layout_width="@dimen/size_image_add_to_friends"
        android:layout_height="@dimen/size_image_add_to_friends"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_plus"
        android:layout_marginEnd="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="@id/card_image"
        app:layout_constraintEnd_toStartOf="@id/button_chat"
        app:layout_constraintTop_toTopOf="@id/card_image" />

    <ImageView
        android:id="@+id/button_chat"
        android:layout_width="@dimen/size_image_chat"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:background="@drawable/ic_chat_button"
        android:backgroundTint="@color/selector_button"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="@dimen/margin_medium"
        android:paddingVertical="@dimen/margin_small"
        android:src="@drawable/ic_chat"
        app:layout_constraintBottom_toBottomOf="@id/card_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/colorGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_image" />

</androidx.constraintlayout.widget.ConstraintLayout>