<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image"
        android:layout_width="146dp"
        android:layout_height="146dp"
        app:cardCornerRadius="73dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="146dp"
            android:layout_height="146dp"
            tools:src="@drawable/ic_profile" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintTop_toBottomOf="@id/card_image"
        tools:text="Иван, 23" />

    <TextView
        android:id="@+id/count_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/name_age"
        tools:text="14 встреч" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/count_events"
        tools:text="Программист, никогда не против выпить пару кружек пива в баре" />

    <TextView
        android:id="@+id/title_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:text="@string/title_my_friends"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description" />

    <TextView
        android:id="@+id/search_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:drawableEnd="@drawable/ic_search"
        android:drawablePadding="@dimen/margin_very_small"
        android:text="@string/search_friends"
        app:layout_constraintStart_toStartOf="@id/title_friends"
        app:layout_constraintTop_toBottomOf="@id/title_friends" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_friends"
        tools:itemCount="1"
        tools:listitem="@layout/item_image_person" />
</androidx.constraintlayout.widget.ConstraintLayout>