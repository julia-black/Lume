<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/margin_medium">

    <ImageView
        android:id="@+id/image"
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        tools:text="Иван, 23"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <TextView
        android:id="@+id/count_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        tools:text="14 встреч"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/name_age" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large"
        tools:text="Программист, никогда не против выпить пару кружек пива в баре"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/count_events" />

</androidx.constraintlayout.widget.ConstraintLayout>