<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/colorBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_tab_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintEnd_toStartOf="@id/card_tab_two"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="@dimen/width_tab"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:gravity="center_horizontal"
            android:padding="14dp"
            android:text="@string/tab_frineds"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_tab_two"
        android:layout_width="@dimen/width_tab"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorTabNotSelected"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintEnd_toStartOf="@id/card_tab_three"
        app:layout_constraintStart_toEndOf="@id/card_tab_one">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:gravity="center_horizontal"
            android:padding="14dp"
            android:paddingBottom="25dp"
            android:text="@string/tab_bages"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_tab_three"
        android:layout_width="@dimen/width_tab"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorTabNotSelected"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_tab_two">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:gravity="center_horizontal"
            android:lines="1"
            android:padding="14dp"
            android:text="@string/tab_settings"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp" />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_content" />

    <LinearLayout
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="@dimen/margin_medium"
        android:background="@drawable/shape_card"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>