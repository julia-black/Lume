<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.singlelab.lume.ui.view.input.PhoneInputView
        android:id="@+id/layout_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.singlelab.lume.ui.view.input.InputView
        android:id="@+id/layout_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_phone" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_medium"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/layout_code"
        app:layout_constraintStart_toStartOf="@id/layout_code"
        app:layout_constraintTop_toBottomOf="@id/button_send_code"
        tools:text="@string/push_code_send"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_medium"
        android:drawableStart="@drawable/ic_back"
        android:drawablePadding="@dimen/margin_small"
        android:fontFamily="@font/suisse_regular"
        android:gravity="center"
        android:text="@string/back"
        android:textSize="@dimen/text_size_standart"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/layout_code"
        app:layout_constraintStart_toStartOf="@id/layout_code"
        app:layout_constraintTop_toBottomOf="@id/text_info"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_send_code"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/continue_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_phone" />

    <Button
        android:id="@+id/button_auth"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/auth"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_phone" />
</androidx.constraintlayout.widget.ConstraintLayout>