<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:spotShadowAlpha">0.02</item>
        <item name="android:ambientShadowAlpha">0.02</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <declare-styleable name="MaskEditText">
        <attr name="met_text_color_hint" format="color" />
    </declare-styleable>

    <style name="PhoneEditTextStyle">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_card</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/selector_action_button</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">@null</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_very_small</item>
        <item name="android:layout_marginRight">@dimen/margin_very_small</item>
        <item name="android:layout_marginBottom">66dp</item>
    </style>

    <style name="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:visibility">gone</item>
    </style>

    <style name="TabTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/noto_sans_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CalendarTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_standart</item>
    </style>

    <style name="CalendarHeaderTextStyle">
        <item name="android:textSize">@dimen/text_size_standart</item>
    </style>
</resources>